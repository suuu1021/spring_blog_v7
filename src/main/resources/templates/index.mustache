{{> layout/header}}

<div class="container p-5">

   <!--
        {{! boardList}} (머스태치 주석)
        #boardList 리스트가 존재하고 비어있지 않으면 반복 실행
   -->

    {{#boardPage.content}}
    <div class="card mb-3">
        <div class="card-body">
            <!-- {{! title }} 은 현재 Board 객체의 title 멤버 변수에 값을 출력한다
                 머스태치는 자동으로 getTitle() 메서드를 호출 한 것이다.
            -->
            <h4 class="card-title mb-3">{{title}}</h4>
            <p> 작성자 : {{user.username}}&nbsp;|&nbsp;{{time}}</p>
            <a href="/board/{{id}}" class="btn btn-primary">상세보기</a>
        </div>
    </div>
    {{/boardPage.content}}

    {{^boardPage.content}}
        <div class="text-center mt-5">
            <h5>등록된 게시글이 없습니다</h5>
        </div>
    {{/boardPage.content}}


    <ul class="pagination d-flex justify-content-center">
        <!--   이번 페이지 버튼      -->
        {{#previousPageNumber}}
            <li class="page-item">
                <!-- http://localhost:8080/?page=1&size=10               -->
                <a class="page-link" href="/?page={{previousPageNumber}}&size={{boardPage.size}}">Previous</a>
            </li>
        {{/previousPageNumber}}
        {{^previousPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        {{/previousPageNumber}}
        <!-- 페이지 번호 -->
        {{#pageLinks}}
            <li class="page-item {{#active}}active{{/active}}">
                <a class="page-link" href="/?page={{displayNumber}}&size={{boardPage.size}}">{{displayNumber}}</a>
            </li>
        {{/pageLinks}}

        <!-- 다음 페이지 버튼  -->
        {{#nextPageNumber}}
            <li class="page-item">
                <!-- http://localhost:8080/?page=1&size=10               -->
                <a class="page-link" href="/?page={{nextPageNumber}}&size={{boardPage.size}}">Next</a>
            </li>
        {{/nextPageNumber}}
        {{^nextPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        {{/nextPageNumber}}
    </ul>

</div>

{{> layout/footer}}